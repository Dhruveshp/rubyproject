<h1>Product Reviews</h1>
<% @prodreviews = @product.review %>
<table>
	<tr>
		<th>Submit by</th>
		<th>Comments</th>
	<tr>
<% @prodreviews.each do |pr| %>
	<tr>
	<td><%= Customer.find(pr.customer_id).username %> </td>
	<td><%= pr.comments %> </td>
	</tr>
<% end %>
</table>

