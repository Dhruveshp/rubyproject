<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :productname %>
    <%= f.text_field :productname %>
  </div>

  <div class="field">
    <%= f.label :homepage %>
    <%= f.check_box :homepage  %>
  </div>
  
  <div class="field">
    <%= f.label :productimage %>
    <%= f.text_field :productimage %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :category_id %>
    <%= f.select :category_id, @category_choice %>
  </div>

  <div class="field">
    <%= f.label :supplier_id %>
    <%= f.select :supplier_id, @supplier_choice %>
  </div>

  <div class="field">
    <%= f.label :saleprice %>
    <%= f.text_field :saleprice %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.select :status, "<option>Active</option> <option>Inactive</option>".html_safe %>
  </div>

  <div class="field">
    <%= f.label :purchaseprice %>
    <%= f.text_field :purchaseprice %>
  </div>

  <div class="field">
    <%= f.label :qtyonhand %>
    <%= f.number_field :qtyonhand %>
  </div>

  <div class="field">
    <%= f.label :reorderpoint %>
    <%= f.number_field :reorderpoint %>
  </div>

  <div class="field">
    <%= f.label :reorderqty %>
    <%= f.number_field :reorderqty %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
