<h1>Welcome to Patel Tech </h1>

<table> <tr>
	<td width='80%' align='left'>

		<% @prod.each do |p| %>
			<product>
				<table width='100%'>
				<tr><td align='center'><b><%= link_to p.productname,  product_path(p.id) %> </b></td></tr>
				<tr><td><center><%= link_to (image_tag p.productimage, size:"100x100"), product_path(p.id) %> <%= p.description %>  </center></td></tr>
				
				<tr><td align='center'>
					<%= form_tag :controller => 'home', :action => 'buy' do %>
							<b>Price:</b> <%= number_to_currency(p.saleprice) %>
							<%= hidden_field_tag 'prodid', "#{p.id}" %> </br>
							<%= select_tag "qty", "<option>1</option> <option>2</option> <option>3</option> <option>4</option> <option>5</option>".html_safe %>
							<%= submit_tag 'Add To Cart', :class => 'button1' %>
					<% end %>
				</td></tr>
				</table>
			</product>
		<% end %> 


	
	</td>
	
	<td width='20%' alight='right'>
	     <% @promos.each do |p| %>
				<p><b><%= p.title %></b> </br>
				<%= p.description %> </br>
				<%= image_tag p.imagepath, size:"50x50" %></br></p> </br>
				<hr>
		 <% end %>
	
	</td>
	
	 
</tr>

<td>
 </table>
	
